@model Entities.Concrete.Staff
@{
    ViewBag.Title = "GetStaff";
    Layout = "~/Views/Shared/Layout.cshtml";
}
@using (Html.BeginForm("UpdateStaff", "Staff", FormMethod.Post))
{
    <div style="margin-bottom:15px"></div>
    <div class="form-group">
        @Html.LabelFor(x=>x.Id)
        @Html.TextBoxFor(c => c.Id, new { @class = "form-control" })
        <br />
        @Html.LabelFor(c => c.StaffName)
        @Html.TextBoxFor(c => c.StaffName, new { @class = "form-control" })
        <br />
    </div>
    <div>
        <button class="btn btn-warning">Güncelle</button>
    </div>
}
