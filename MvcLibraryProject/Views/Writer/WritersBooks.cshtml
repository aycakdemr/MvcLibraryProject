@using Entities.Concrete
@model List<Book>
@{
    ViewBag.Title = "WritersBooks";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>Kitap Yazarı : @ViewBag.dgr1 @ViewBag.dgr2;</h2>

<br />

<table class="table table-striped">
    <tr>
        <th>Id</th>
        <th>Kitap Adı</th>
        <th>YayınEvi</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>
            <td>@item.Publisher</td>
        </tr>
    }

</table>